    {{success}}
  </div>
  {{/if}}
              <div class="card-body px-lg-5 py-lg-5">
                <div class="text-center text-muted mb-4">
                  
                </div>
                <form action = "/register" method = "post"  role="form">
                  <div class="form-group">
                    <div class="input-group input-group-alternative mb-3">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
                      </div>
                      <input class="form-control" placeholder="Username" type="text" name = "username" value = "{{username}}" required/>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group input-group-alternative mb-3">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
                      </div>
                      <input class="form-control" placeholder="sponsor" type="text" name = "sponsor" value = "{{sponsor}}" /  >
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group input-group-alternative mb-3">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
                      </div>
                      <input class="form-control" placeholder="Fullname" type="text" name = "fullname" value = "{{fullname}}" required/  >
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group input-group-alternative mb-3">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                      </div>
                      <input class="form-control" placeholder="Email" type="email" name = "email" value = "{{email}}" required/  >
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group input-group-alternative mb-3">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ni ni-phone-83"></i></span>
                      </div>
                      <input class="form-control" placeholder="Phone Number" type="tel" name = "phone" value = "{{phone}}" required/  >
                    </div>
                  </div>
                  <div class="form-group focused">
                    <div class="input-group input-group-alternative">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                      </div>
                      <input class="form-control" placeholder="Password"  id = "password" type="password" name = "password" value = "{{password}}" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required/ >
                      
                    </div>
                  </div>
                  <div class="form-group focused">
                    <div class="input-group input-group-alternative">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                      </div>
                      <input class="form-control" id = "cpass" placeholder="Re-enter Password" type="password" name = "cpass" value = "{{password}}" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required/ >
                    </div>
                  </div>
                  
                  <div id="pswd-info" > 
                  <h4>Password must meet the following requirements:</h4> 
                  <ul class ="list-group "> 
                  <li  id="Uletter-invalid" class ="list-group-item text-danger">At least <strong>one Uppercase  </strong>  <i class="fa fa-times" aria-hidden="true"></i> </li> 
                  <li  id="Ulettervalid" class ="list-group-item text-success">At least <strong>one Uppercase   </strong>  <i class="fa fa-check" aria-hidden="true"></i> </li>
                  <li  id="Lletter-invalid" class ="list-group-item text-danger">At least <strong> Lowercase  </strong>  <i class="fa fa-times" aria-hidden="true"></i> </li>
                  
                  <li  id="Llettervalid" class ="list-group-item text-success">At least <strong> one Lowercase  </strong>  <i class="fa fa-check" aria-hidden="true"></i> </li>
                  
                  
                   <li id="numberInvalid" class ="list-group-item text-danger">At least <strong>one number</strong>  <i class="fa fa-times" aria-hidden="true"></i> </li>
                   
                   <li id="numberValid" class ="list-group-item text-success">At least <strong>one number</strong>  <i class="fa fa-check" aria-hidden="true"></i> </li>
                   
                    <li id="lengthInvalid" class ="list-group-item text-danger">Be at least <strong>8 characters</strong>  <i class="fa fa-times" aria-hidden="true"></i> </li>
                    <li id="lengthValid" class ="list-group-item text-success">Be at least <strong>8 characters</strong>  <i class="fa fa-times" aria-hidden="true"></i> </li>
                    
                    <li id="matchinvalid" class ="list-group-item text-danger">Password Must <strong> Match</strong>  <i class="fa fa-times" aria-hidden="true"></i> </li>
                    <li id="matchvalid" class ="list-group-item text-success">Password Must <strong> Match</strong>  <i class="fa fa-check" aria-hidden="true"></i> </li>
                     </ul> </div>
                  <div class="row my-4">
                    <div class="col-12">
                      <div class="custom-control custom-control-alternative custom-checkbox">
                        <input class="custom-control-input" id="customCheckRegister" type="checkbox">
                        <label class="custom-control-label" for="customCheckRegister"><span>I agree with the <a href="#">Privacy Policy</a></span></label>
                      </div>
                    </div>
                  </div>
                  
                  <div class="text-center">
                    <button type="submit" class="btn btn-primary mt-4" id = "ableReg" >Create account</button>
                  </div>
                  
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      
